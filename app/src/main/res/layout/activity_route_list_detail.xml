<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <ImageView
            android:id="@+id/routeimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="33dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/routename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/routeimageView"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
            android:layout_toEndOf="@+id/routeimageView"
            android:layout_toRightOf="@+id/routeimageView"
            android:text="TextView"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/routeimageView"
            android:layout_alignLeft="@+id/routename"
            android:layout_alignStart="@+id/routename"
            android:text="TextView"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearlayout"
            android:layout_below="@+id/description"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">


        </LinearLayout>

        <ImageView
            android:id="@+id/accessimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/routename"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:visibility="invisible"
            />


    </RelativeLayout>
</ScrollView>